<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Game - Christmas Crab Game</title>
    <link href="/css/style.css" rel="stylesheet">
    <script src="/socket.io/socket.io.js"></script>
</head>
<body class="bg-red-900 min-h-screen text-white">
    <!-- Top Bar -->
    <div class="bg-red-950 p-4 flex justify-between items-center">
        <div class="flex items-center space-x-4">
            <button onclick="window.location.href='/'" class="text-white hover:text-red-300">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
            </button>
            <div class="flex items-center space-x-2">
                <div class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center">
                    <span class="text-lg">üë§</span>
                </div>
                <div>
                    <div class="font-bold" id="current-username"><%= username %></div>
                    <div class="text-sm text-yellow-300" id="current-balance">Loading...</div>
                </div>
            </div>
        </div>
        <div class="flex items-center space-x-4">
            <div class="text-right">
                <div class="text-sm text-gray-300">Balance</div>
                <div class="text-xl font-bold text-yellow-300" id="top-balance">-</div>
            </div>
        </div>
    </div>

    <div class="flex flex-col lg:flex-row h-[calc(100vh-80px)]">
        <!-- Left Players Panel -->
        <div class="bg-red-950 w-full lg:w-64 p-4 space-y-4 overflow-y-auto">
            <h3 class="font-bold text-lg mb-4">Players</h3>
            <div id="players-list-left" class="space-y-3">
                <!-- Players will be added here -->
            </div>
        </div>

        <!-- Main Game Area -->
        <div class="flex-1 flex flex-col items-center justify-center p-4">
            <!-- Game Status -->
            <div class="mb-4 text-center">
                <div id="game-status" class="text-xl font-bold mb-2">Waiting for game to start...</div>
                <div id="dice-results" class="text-lg hidden mb-4"></div>
                
                <!-- Winners Display -->
                <div id="winners-section" class="hidden fixed inset-0 z-50 items-center justify-center bg-black bg-opacity-50" style="display: none;">
                    <div class="bg-green-900 rounded-lg p-10 max-w-6xl w-full mx-4 relative cartoon-border">
                        <div class="flex items-center justify-between mb-6">
                            <div class="text-4xl font-bold text-yellow-300">üèÜ Winners</div>
                            <button 
                                id="btn-close-winners" 
                                class="hidden bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition duration-200 text-lg"
                                onclick="closeWinnersPopup()"
                            >
                                Close
                            </button>
                        </div>
                        <div id="winners-list" class="space-y-4 text-left max-h-[600px] overflow-y-auto">
                            <!-- Winners will be added here -->
                        </div>
                    </div>
                </div>
                
                <button 
                    id="btn-start-game" 
                    class="bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-8 rounded-lg text-lg mt-4 hidden disabled:bg-gray-600 disabled:cursor-not-allowed"
                    style="display: none;"
                >
                    Start Game
                </button>
            </div>

            <!-- Betting Section -->
            <div id="">
                <!-- Betting Grid 3x2 with Checkerboard Pattern -->
                <div class="grid grid-cols-3 gap-4 mb-6 max-w-4xl w-full betting-grid-checkerboard">
                    <!-- Top Row: Reindeer (dark red), Potion (light grey), Shrimp (dark red) -->
                    <div class="betting-square bg-red-950 vintage-texture rounded-lg p-4 border-4 border-transparent hover:border-yellow-400 cursor-pointer transition-all cartoon-border texture-overlay" data-symbol="reindeer">
                        <div class="text-center relative z-10">
                            <img src="/christmas-img/christmas-reindeer.png" alt="Reindeer" class="w-[60px] h-[60px] mb-2 mx-auto object-contain" style="image-rendering: auto;">
                            <div class="font-bold text-white">Reindeer</div>
                            <div class="text-sm text-yellow-300 mt-2 bet-amount" id="bet-reindeer">0</div>
                        </div>
                    </div>
                    <div class="betting-square bg-stone-100 vintage-texture rounded-lg p-4 border-4 border-transparent hover:border-yellow-400 cursor-pointer transition-all cartoon-border texture-overlay" data-symbol="potion">
                        <div class="text-center relative z-10">
                            <img src="/christmas-img/christmas-potion.png" alt="Potion" class="w-[60px] h-[60px] mb-2 mx-auto object-contain" style="image-rendering: auto;">
                            <div class="font-bold text-stone-900">Potion</div>
                            <div class="text-sm text-red-900 mt-2 font-semibold bet-amount" id="bet-potion">0</div>
                        </div>
                    </div>
                    <div class="betting-square bg-red-950 vintage-texture rounded-lg p-4 border-4 border-transparent hover:border-yellow-400 cursor-pointer transition-all cartoon-border texture-overlay" data-symbol="shrimp">
                        <div class="text-center relative z-10">
                            <img src="/christmas-img/christmas-shrimp.png" alt="Shrimp" class="w-[60px] h-[60px] mb-2 mx-auto object-contain" style="image-rendering: auto;">
                            <div class="font-bold text-white">Shrimp</div>
                            <div class="text-sm text-yellow-300 mt-2 bet-amount" id="bet-shrimp">0</div>
                        </div>
                    </div>
                    <!-- Bottom Row: Crab (light grey), Fish (dark red), Chicken (light grey) -->
                    <div class="betting-square bg-stone-100 vintage-texture rounded-lg p-4 border-4 border-transparent hover:border-yellow-400 cursor-pointer transition-all cartoon-border texture-overlay" data-symbol="crab">
                        <div class="text-center relative z-10">
                            <img src="/christmas-img/christmas-crab.png" alt="Crab" class="w-[60px] h-[60px] mb-2 mx-auto object-contain" style="image-rendering: auto;">
                            <div class="font-bold text-stone-900">Crab</div>
                            <div class="text-sm text-red-900 mt-2 font-semibold bet-amount" id="bet-crab">0</div>
                        </div>
                    </div>
                    <!-- <div class="betting-square bg-red-950 vintage-texture rounded-lg p-4 border-4 border-transparent hover:border-yellow-400 cursor-pointer transition-all cartoon-border texture-overlay" data-symbol="fish">
                        <div class="text-center relative z-10">
                            <img src="/christmas-img/christmas-fish.png" alt="Fish" class="w-[60px] h-[60px] mb-2 mx-auto object-contain" style="image-rendering: auto;">
                            <div class="font-bold text-white">Fish</div>
                            <div class="text-sm text-yellow-300 mt-2 bet-amount" id="bet-fish">0</div>
                        </div>
                    </div> -->
                    <div class="betting-square bg-red-950 vintage-texture rounded-lg p-4 border-4 border-transparent hover:border-yellow-400 cursor-pointer transition-all cartoon-border texture-overlay" data-symbol="fish">
                      <div class="text-center relative z-10">
                          <img src="/christmas-img/christmas-fish.png" alt="Fish" class="w-[60px] h-[60px] mb-2 mx-auto object-contain" style="image-rendering: auto;">
                          <div class="font-bold text-white">Fish</div>
                          <div class="text-sm text-yellow-300 mt-2 bet-amount" id="bet-fish">0</div>
                      </div>
                  </div>
                    <div class="betting-square bg-stone-100 vintage-texture rounded-lg p-4 border-4 border-transparent hover:border-yellow-400 cursor-pointer transition-all cartoon-border texture-overlay" data-symbol="chicken">
                        <div class="text-center relative z-10">
                            <img src="/christmas-img/christmas-chicken.png" alt="Chicken" class="w-[60px] h-[60px] mb-2 mx-auto object-contain" style="image-rendering: auto;">
                            <div class="font-bold text-stone-900">Chicken</div>
                            <div class="text-sm text-red-900 mt-2 font-semibold bet-amount" id="bet-chicken">0</div>
                        </div>
                    </div>
                </div>

                <!-- Betting Controls -->
                <div id="betting-section" class="bg-red-950 rounded-lg p-6 max-w-2xl w-full">
                    <div class="flex flex-col items-center space-y-4">
                        <div class="flex items-center space-x-4">
                            <button id="btn-max" class="bg-orange-600 hover:bg-orange-700 text-white font-bold py-2 px-6 rounded disabled:bg-gray-600 disabled:cursor-not-allowed">
                                MAX
                            </button>
                            <div class="flex items-center space-x-2">
                                <span class="text-lg font-bold">Bet:</span>
                                <input 
                                    type="number" 
                                    id="bet-amount" 
                                    min="1" 
                                    value="100" 
                                    readonly
                                    class="w-24 px-3 py-2 rounded bg-red-800 text-white text-center border-2 border-red-600 cursor-not-allowed"
                                >
                                <span class="text-sm text-gray-300">FC</span>
                            </div>
                        </div>
                        <div class="flex space-x-2">
                            <button class="fc-preset bg-gray-700 hover:bg-gray-600 text-white font-bold px-4 py-2 rounded disabled:bg-gray-800 disabled:cursor-not-allowed disabled:opacity-50" data-amount="100">100 FC</button>
                            <button class="fc-preset bg-gray-700 hover:bg-gray-600 text-white font-bold px-4 py-2 rounded disabled:bg-gray-800 disabled:cursor-not-allowed disabled:opacity-50" data-amount="200">200 FC</button>
                            <button class="fc-preset bg-gray-700 hover:bg-gray-600 text-white font-bold px-4 py-2 rounded disabled:bg-gray-800 disabled:cursor-not-allowed disabled:opacity-50" data-amount="400">400 FC</button>
                            <button class="fc-preset bg-gray-700 hover:bg-gray-600 text-white font-bold px-4 py-2 rounded disabled:bg-gray-800 disabled:cursor-not-allowed disabled:opacity-50" data-amount="600">600 FC</button>
                            <button class="fc-preset bg-gray-700 hover:bg-gray-600 text-white font-bold px-4 py-2 rounded disabled:bg-gray-800 disabled:cursor-not-allowed disabled:opacity-50" data-amount="1000">1,000 FC</button>
                        </div>
                        <button 
                            id="btn-place-bet" 
                            class="bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-12 rounded-lg text-lg disabled:bg-gray-600 disabled:cursor-not-allowed"
                            disabled
                        >
                            ƒê·∫∑t (Place Bet)
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right Panel with Tabs -->
        <div class="bg-red-950 w-full lg:w-64 flex flex-col">
            <!-- Tabs -->
            <div class="flex border-b border-red-800">
                <button 
                    id="tab-players" 
                    class="flex-1 px-4 py-2 text-sm font-bold bg-red-900 text-white border-b-2 border-yellow-400"
                    onclick="switchTab('players')"
                >
                    Players
                </button>
                <button 
                    id="tab-history" 
                    class="flex-1 px-4 py-2 text-sm font-bold text-gray-400 hover:text-white"
                    onclick="switchTab('history')"
                >
                    History
                </button>
            </div>
            
            <!-- Players Panel -->
            <div id="panel-players" class="p-4 space-y-4 overflow-y-auto flex-1">
                <h3 class="font-bold text-lg mb-4">Players</h3>
                <div id="players-list-right" class="space-y-3">
                    <!-- Players will be added here -->
                </div>
            </div>
            
            <!-- History Panel -->
            <div id="panel-history" class="p-4 space-y-4 overflow-y-auto flex-1 hidden">
                <h3 class="font-bold text-lg mb-4">Game History</h3>
                <div id="game-history-list" class="space-y-3">
                    <!-- History will be added here -->
                </div>
            </div>
        </div>
    </div>

    <!-- Timer Bar -->
    <div class="fixed bottom-0 left-0 right-0 bg-red-950 p-4">
        <div class="max-w-7xl mx-auto">
            <div class="text-center mb-2">
                <span id="timer-text" class="text-white font-bold">Th·ªùi gian c√≤n l·∫°i ƒë·ªÉ ƒë·∫∑t c∆∞·ª£c (Time remaining to place a bet)</span>
            </div>
            <div class="w-full bg-red-800 rounded-full h-4">
                <div id="timer-bar" class="bg-green-600 h-4 rounded-full transition-all duration-1000" style="width: 0%"></div>
            </div>
        </div>
    </div>
    <script>
        const userId = '<%= userId %>';
        const username = '<%= username %>';
        
        // Close winners popup function (will be overridden by game.js if admin)
        function closeWinnersPopup() {
            // This function will be properly implemented in game.js
            const winnersSection = document.getElementById("winners-section");
            if (winnersSection) {
                winnersSection.classList.add("hidden");
            }
        }
        
        // Tab switching function
        function switchTab(tab) {
            const playersTab = document.getElementById('tab-players');
            const historyTab = document.getElementById('tab-history');
            const playersPanel = document.getElementById('panel-players');
            const historyPanel = document.getElementById('panel-history');
            
            if (tab === 'players') {
                playersTab.classList.add('bg-red-900', 'text-white', 'border-b-2', 'border-yellow-400');
                playersTab.classList.remove('text-gray-400');
                historyTab.classList.remove('bg-red-900', 'text-white', 'border-b-2', 'border-yellow-400');
                historyTab.classList.add('text-gray-400');
                playersPanel.classList.remove('hidden');
                historyPanel.classList.add('hidden');
            } else {
                historyTab.classList.add('bg-red-900', 'text-white', 'border-b-2', 'border-yellow-400');
                historyTab.classList.remove('text-gray-400');
                playersTab.classList.remove('bg-red-900', 'text-white', 'border-b-2', 'border-yellow-400');
                playersTab.classList.add('text-gray-400');
                historyPanel.classList.remove('hidden');
                playersPanel.classList.add('hidden');
            }
        }
    </script>
    <script src="/js/dice-animation.js"></script>
    <script src="/js/game.js"></script>
</body>
</html>

